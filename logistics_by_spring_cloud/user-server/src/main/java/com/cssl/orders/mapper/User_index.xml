<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cssl.orders.mapper.User_index">
    <resultMap id="user" type="com.cssl.entity.LogisticsUser">
        <id column="lu_id" property="luId"></id>
        <id column="lu_username" property="luUsername"></id>
        <id column="lu_sex" property="luSex"></id>
        <id column="lu_birthday" property="luBirthday"></id>
        <id column="lu_gmt_modified" property="luGmtModified"></id>
        <id column="lu_isblacklist" property="luIsblacklist"></id>
        <id column="lu_phone" property="luPhone"></id>
    </resultMap>

   <select id="selectAll" resultMap="user">
       SELECT lu.lu_id,lu.lu_username,lu.lu_phone,lu.lu_sex,lu.lu_birthday,lu.lu_gmt_modified,lu.lu_isblacklist FROM logistics_user lu
       INNER JOIN role_user ru ON lu.lu_id=ru.lu_id
       WHERE 1=1 AND ru.lr_id=1002
       <if test="name != null and name != ''">
           and lu_username like '%${name}%'
       </if>
       <if test="phone gt 0">
           and lu_phone like '%${phone}%'
       </if>
       limit  #{page},#{limit}
   </select>

    <select id="count" resultType="int">
        SELECT count(0) FROM logistics_user where 1=1
        <if test="name != null and name != ''">
            and lu_username like '%${name}%'
        </if>
        <if test="phone gt 0">
            and lu_phone like '%${phone}%'
        </if>
    </select>

    <update id="update">
        UPDATE logistics_user SET lu_isblacklist=#{block},lu_gmt_modified=NOW() WHERE lu_id=#{id}
    </update>

    <resultMap id="user2" type="com.cssl.entity.LogisticsUser">
        <id column="lu_id" property="luId"></id>
    </resultMap>
    <select id="user_black" resultMap="user2">
          SELECT lu_id FROM logistics_user WHERE lu_isblacklist=1
    </select>
</mapper>